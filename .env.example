# Dollar Loans - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ==================================================================
# TOTALITY LMS INTEGRATION
# ==================================================================

# Totality API Configuration
NEXT_PUBLIC_TOTALITY_API_URL=https://api.totality.example.com/v1
NEXT_PUBLIC_TOTALITY_SSO_URL=https://sso.totality.example.com
NEXT_PUBLIC_TOTALITY_ANALYTICS_URL=https://analytics.totality.example.com/xapi

# Totality SSO Credentials
TOTALITY_SSO_CLIENT_ID=your_client_id_here
TOTALITY_SSO_CLIENT_SECRET=your_client_secret_here
NEXT_PUBLIC_TOTALITY_REDIRECT_URI=http://localhost:3000/auth/callback

# Totality Tenant Configuration
TOTALITY_TENANT_ID=your_tenant_id_here

# Feature Flags (set to 'true' to enable)
NEXT_PUBLIC_TOTALITY_SSO_ENABLED=false
NEXT_PUBLIC_TOTALITY_DOCUMENTS_ENABLED=false
NEXT_PUBLIC_TOTALITY_APPLICATIONS_ENABLED=false
NEXT_PUBLIC_TOTALITY_WEBHOOKS_ENABLED=false
NEXT_PUBLIC_TOTALITY_ANALYTICS_ENABLED=false

# Development Mode
# Set to 'true' to use mock data instead of Totality API
NEXT_PUBLIC_USE_MOCK_DATA=true

# ==================================================================
# APPLICATION CONFIGURATION
# ==================================================================

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Analytics (Optional - if not using Totality analytics)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# ==================================================================
# FUTURE INTEGRATIONS (Optional)
# ==================================================================

# Email Service (for non-Totality emails)
# SENDGRID_API_KEY=
# RESEND_API_KEY=

# File Storage (if not using Totality)
# AWS_S3_BUCKET=
# AWS_S3_REGION=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Payment Processing (if applicable)
# STRIPE_SECRET_KEY=
# STRIPE_PUBLISHABLE_KEY=

# ==================================================================
# GITHUB INTEGRATION
# ==================================================================

# GitHub Token with repo scope
GITHUB_TOKEN=your_token_here
# GitHub Owner (Username or Organization)
GITHUB_OWNER=your_username
# GitHub Repository Name
GITHUB_REPO=your_repo_name

# ==================================================================
# DEVELOPMENT TOOLS
# ==================================================================

# Enable debug logging
DEBUG=false

# Show detailed error messages (development only)
NEXT_PUBLIC_SHOW_ERRORS=true
